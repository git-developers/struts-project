<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<constant name="struts.devMode" value="true"></constant>
	
	<package name="default"  extends="struts-default">
	
		<action name="index" class="com.efact.action.IndexAction" method = "execute">
			<result name="SUCCESS">/index.jsp</result>
			<result name="ERROR">/error.jsp</result>
		</action>
		
		<action name="comprobante-por-lote" class="com.efact.action.VoucherAction" method = "index">
			<result name="SUCCESS">/voucher.jsp</result>
			<result name="ERROR">/error.jsp</result>
		</action>
		
		<action name="comprobante-por-lote-search" class="com.efact.action.VoucherAction" method = "search">
			<result name="SUCCESS">/voucher-search.jsp</result>
			<result name="ERROR">/error.jsp</result>
		</action>
	
		<action name="devengados-conciliacion" class="com.efact.action.ConciliationAction" method = "accruedConciliation">
			<result name="SUCCESS">/conciliation-accrued.jsp</result>
			<result name="ERROR">/error.jsp</result>
		</action>
		
		<action name="emision-conciliacion" class="com.efact.action.ConciliationAction" method = "issueConciliation">
			<result name="SUCCESS">/conciliation-issue.jsp</result>
			<result name="ERROR">/error.jsp</result>
		</action>
		
		<action name="nota-de-credito" class="com.efact.action.NoteCreditAction" method = "index">
			<result name="SUCCESS">/note-credit.jsp</result>
			<result name="ERROR">/error.jsp</result>
		</action>
		
		<action name="nota-de-debito" class="com.efact.action.NoteDebitAction" method = "index">
			<result name="SUCCESS">/note-debit.jsp</result>
			<result name="ERROR">/error.jsp</result>
		</action>
		
		<action name="registro-de-ventas" class="com.efact.action.ReportAction" method = "salesRecord">
			<result name="SUCCESS">/report-sales-record.jsp</result>
			<result name="ERROR">/error.jsp</result>
		</action>

	
	</package>

</struts>